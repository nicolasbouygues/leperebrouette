<body>
  <div class="sign-up-container">
    <div class="carte-de-sign-up">
      <h2 id=signuptext>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="les6premiers">
            <%= f.input :username, required: true, input_html: {id: "usernameinsignup"}, label: false, autofocus: true, placeholder: "Username" %>
            <%= f.input :first_name, required: true, input_html: {id: "firstnameinsignup"}, label: false, autofocus: true, placeholder: "First name" %>
            <%= f.input :last_name, required: true, input_html: {id: "lastnameinsignup"}, label: false, autofocus: true, placeholder: "Last name" %>
            <%= f.input :email, required: true, input_html: {id: "emailinsignup"}, label: false, autofocus: true, placeholder: "Email" %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", id: "passwordinsignup"}, label: false, placeholder: "Password" %>
            <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", id: "passwordconfirmationinsignup"}, label: false, placeholder: "Password confirmation" %>
          </div>

          <div class="photoandsignup">
            <%= f.input :photo, require: false, input_html: {id: "photoinsignup"}, label: false, as: :file %>

            <%= f.button :submit, "Sign up", id: "signupbouton" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</body>

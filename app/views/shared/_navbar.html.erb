<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path,  class: "navbar-brand" do  %>
  <%= image_tag "logo_default.png" %>
    <% end %>

   <p class="title">Le Père Br<span>o</span>uette</p>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Profil", my_barrows_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Poster une brouette", new_barrow_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "avatar_default.png", class: "avatar dropdown-toggle image", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profil", my_barrows_path, class: "dropdown-item" %>
            <%= link_to "Mes réservations", my_barrows_path, class: "dropdown-item" %>
            <%= link_to "Mes brouettes", my_barrows_path, class: "dropdown-item" %>
            <%= link_to "Paramètres", my_barrows_path, class: "dropdown-item" %>
            <%= link_to "Sécurité du compte", my_barrows_path, class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
